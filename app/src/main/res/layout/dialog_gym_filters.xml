<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="300dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the range of values for the guard pokemon's CP"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp"
            android:layout_marginRight="16dp"/>

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guardPokemonCpSeekbar"
            rsb:absoluteMinValue="1"
            rsb:absoluteMaxValue="2000"
            android:padding="0dp"
            rsb:valuesAboveThumbs="true"
            rsb:textAboveThumbsColor="#000000"
            android:layout_margin="0dp" />

    </LinearLayout>

</ScrollView>